            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center">


                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    >

                    <ProgressBar
                        android:id="@+id/circular_progress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="100"
                        android:progressDrawable="@drawable/stats_full"
                        android:textAlignment="center"/>

                    <ProgressBar
                        android:id="@+id/circular_progress1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="75"
                        android:progressDrawable="@drawable/stats_progress"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtPercentage"
                        android:text="0%"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="#7F7C7C"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Voters Count:"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginStart="10dp"
                            android:textAllCaps="true"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            tools:ignore="SmallSp" />

                        <TextView
                            android:id="@+id/txttotalCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="25%"
                            android:textSize="12sp"
                            android:layout_marginStart="10dp"
                            android:textColor="#000"/>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp">

                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@color/colorPrimaryDark"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Voters Polled :"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginStart="10dp"
                            android:textAllCaps="true"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            tools:ignore="SmallSp" />
                        <TextView
                            android:id="@+id/txtTotalPolled"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="75%"
                            android:textSize="12sp"
                            android:layout_marginStart="10dp"
                            android:textColor="#000"/>
                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedgrey_color"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                >


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/greycolor" />

                <TextView
                    android:id="@+id/txtTotalVotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/greycolor" />

                <TextView
                    android:id="@+id/txtTotalVotesPolled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/greycolor" />

                <TextView
                    android:id="@+id/txtMaleVotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/greycolor" />

                <TextView
                    android:id="@+id/txtFemaleVotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/greycolor" />

                <TextView
                    android:id="@+id/txtMaleVotesPolled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/greycolor" />

                <TextView
                    android:id="@+id/txtFeMaleVotesPolled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/greycolor" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>




    <LinearLayout
        android:id="@+id/bottamLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="2">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/voter_search"
            android:layout_margin="2dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            android:id="@+id/btnSearchVote"
            tools:ignore="ButtonStyle" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="@string/voter_mandal_list"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            android:id="@+id/btnSearchVoteList"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

</RelativeLayout>